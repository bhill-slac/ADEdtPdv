#
# EPICS database for
# UNIQ UP900/UP900CL Camera
#

record( seq, "$(P)$(R):DoReport" )
{
	field( DESC,	"Do delayed report" )
	field( DOL1,    "0" )
	field( DLY1,    "2" )
	field( LNK1,    "$(P)$(R):Report PP" )
}

record( longin,	"$(P)$(R):Report" )
{
	field( DESC,	"Report camera settings" )
	field( DTYP,	"stream" )
	field( INP,		"@up900.proto Report $(PORT).SER" )
}

record( longin,	"$(P)$(R):ReadGain" )
{
	field( DESC,	"Gain from camera report" )
	field( DTYP,	"stream" )
	field( INP,		"@up900.proto ReadGain $(PORT).SER" )
	field( SCAN,	"I/O Intr" )
}

record( longin,	"$(P)$(R):ReadReference" )
{
	field( DESC,	"Reference from camera report" )
	field( DTYP,	"stream" )
	field( INP,		"@up900.proto ReadReference $(PORT).SER" )
	field( SCAN,	"I/O Intr" )
}

record( longin,	"$(P)$(R):ReadDoubleSpeed" )
{
	field( DESC,	"DblSpd from camera report" )
	field( DTYP,	"stream" )
	field( INP,		"@up900.proto ReadDoubleSpeed $(PORT).SER" )
	field( SCAN,	"I/O Intr" )
}

record( ao, "$(P)$(R):Gain" )
{
	field( DESC,	"Camera gain (0..1023)" )
	field( DRVH,	"1023" )
	field( DRVL,	"0" )
	field( HOPR,	"1023" )
	field( LOPR,	"0" )
	field( PINI,	"YES" )
	field( FLNK,	"$(P)$(R):SetGain" )
}

record( ao, "$(P)$(R):SetGain" )
{
	field( DESC,	"Set camera gain (0..1023)" )
	field( DOL,		"$(P)$(R):Gain" )
	field( OMSL,	"closed_loop" )
	field( DTYP,	"stream" )
	field( OUT,		"@up900.proto SetGain $(PORT).SER" )
	field( DRVH,	"1023" )
	field( DRVL,	"0" )
	field( PINI,	"YES" )
	field( FLNK,	"$(P)$(R):DoReport" )
}

